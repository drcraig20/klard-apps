{
  "name": "klard-apps",
  "version": "1.0.0",
  "private": true,
  "description": "Mono repo for Klard client applications",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "dev:web": "turbo dev --filter=klard-web",
    "dev:mobile": "turbo dev --filter=klard-mobile",
    "dev:auth": "turbo dev --filter=klard-auth",
    "build:web": "turbo build --filter=klard-web",
    "build:auth": "turbo build --filter=klard-auth",
    "test:auth": "turbo test --filter=klard-auth",
    "storybook:web": "pnpm --filter klard-web storybook",
    "storybook:mobile": "pnpm --filter klard-mobile storybook",
    "storybook:build:web": "pnpm --filter klard-web storybook:build",
    "storybook:build:mobile": "pnpm --filter klard-mobile storybook:build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drcraig20/klard-apps.git"
  },
  "devDependencies": {
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@10.24.0"
}
