# Server Configuration
PORT=3050
NODE_ENV=development

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,klard://

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long
BETTER_AUTH_URL=http://localhost:3050

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/klard_auth_db

# OTP Configuration (optional - defaults shown)
OTP_LENGTH=6
OTP_EXPIRES_IN=600
OTP_MAX_ATTEMPTS=3

# OAuth Providers (optional - only configure providers you want to enable)

# Google OAuth
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Get credentials at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Apple OAuth
# Get credentials at: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# Rate Limiting - Passkey Endpoints (optional - defaults shown)
# 10 requests per 60 seconds for passkey operations
RATE_LIMIT_PASSKEY_WINDOW=60
RATE_LIMIT_PASSKEY_MAX=10

# Passkey/WebAuthn Configuration
# PASSKEY_RP_ID: Relying Party ID - must match the domain where passkeys are used
#   Development: localhost
#   Production: klard.app (or your domain)
PASSKEY_RP_ID=localhost

# PASSKEY_RP_NAME: Human-readable service name shown to users during passkey creation
PASSKEY_RP_NAME=Klard

# PASSKEY_ORIGIN: Full origin URL for WebAuthn operations - must match auth server URL exactly
#   Development: http://localhost:3050 (match BETTER_AUTH_URL)
#   Production: https://auth.klard.app
PASSKEY_ORIGIN=http://localhost:3050
