{
  "name": "klard-auth",
  "version": "1.0.0",
  "description": "Auth system for Klard Subscription app, handle users registration, authn, authz and social logins and acts as a resource server to the klard-api",
  "keywords": [
    "Klard",
    "Subscription",
    "burner",
    "card"
  ],
  "homepage": "https://github.com/drcraig20/klard-auth#readme",
  "bugs": {
    "url": "https://github.com/drcraig20/klard-auth/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drcraig20/klard-auth.git"
  },
  "license": "ISC",
  "author": "Klard Inc",
  "type": "module",
  "main": "build/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm dlx @better-auth/cli migrate -y && tsc",
    "db:migrate": "pnpm dlx @better-auth/cli migrate",
    "start": "node build/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "pnpm typecheck && pnpm lint && pnpm test"
  },
  "dependencies": {
    "@better-auth/expo": "^1.4.7",
    "@better-auth/passkey": "^1.4.7",
    "better-auth": "^1.4.7",
    "better-call": "^1.1.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@simplewebauthn/server": "^13.2.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
